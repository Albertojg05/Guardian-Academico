{
  "manifest_version": 3,
  "name": "Guardian Academico",
  "version": "1.3",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": ["tabs", "storage", "notifications"],
  "web_accessible_resources": [
    {
      "resources": ["bloqueado.html", "styles/bloqueado.css"],
      "matches": ["<all_urls>"]
    }
  ]
}